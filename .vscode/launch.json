{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Schwab Downloader",
      "type": "debugpy",
      "request": "launch",
      "program": "src/schwab_downloader/__main__.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        "--year=2024"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Debug with LLM Debug Mode",
      "type": "debugpy",
      "request": "launch",
      "program": "src/schwab_downloader/__main__.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        "--year=2024",
        "--llm-debug"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "cwd": "${workspaceFolder}"
    }
  ]
}
