{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with Remote Debugging",
      "type": "debugpy",
      "request": "launch",
      "program": "src/schwab_downloader/__main__.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        "--date-range=20230101-20251231",
        "--cache-accounts=.schwab_accounts.json",
        "--remote-debug"
      ],
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src"
      },
      "cwd": "${workspaceFolder}"
    }
  ]
}
